        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符-->
            <pattern>%X{ip} %d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
        <!--日志文件最大的大小-->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>
    </appender>

    <!--日志级别：All < Trace < Debug < Info < Warn < Error < Fatal < OFF.-->
    <!--来指定该Logger所适用的类,详见ApiLogger-->
    <!--只有定义了logger并引入的appender，appender才会生效-->
    <logger name="error" level="error" additivity="false">
        <!--Logger的子节点，用来指定该日志输出到哪个Appender,如果没有指定，就会默认继承自Root.
        如果指定了，那么会在指定的这个Appender和Root的Appender中都会输出，此时我们可以设置Logger的additivity="false"
        只在自定义的Appender中进行输出-->
        <appender-ref ref="errorFile"/>
    </logger>
    <logger name="warn" level="warn" additivity="false">
        <appender-ref ref="warnFile"/>
    </logger>
    <logger name="info" level="info" additivity="false">
        <appender-ref ref="infoFile"/>
    </logger>
    <logger name="debug" level="debug" additivity="false">
        <appender-ref ref="debugFile"/>
    </logger>
    <logger name="redis" level="debug" additivity="false">
        <appender-ref ref="redisFile"/>
    </logger>
    <logger name="rocketmq" level="debug" additivity="false">
        <appender-ref ref="rocketMqFile"/>
    </logger>
    <!--Root用来指定项目的根日志,没有单独指定Logger,会统一输出到Root中-->
    <root level="info" additivity="false">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>