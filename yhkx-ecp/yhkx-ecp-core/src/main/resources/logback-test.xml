        </triggeringPolicy>
    </appender>

    <appender name="rocketMqFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/rocketmq.log.%d{yyyy-MM-dd}</FileNamePattern>
            <!--日志文件保留天数-->
